<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/logo" android:layout_width="wrap_content" android:layout_height="250dp" android:layout_marginTop="20dp" android:src="@drawable/logos" android:layout_centerHorizontal="true"/>
        <android.support.design.widget.TextInputLayout android:id="@+id/hit1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/logo">
            <EditText android:id="@+id/username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="نام کاربری" android:maxLength="30" android:layout_centerHorizontal="true"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout android:id="@+id/hit2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/hit1" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:passwordToggleEnabled="true">
            <EditText android:id="@+id/password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:hint="کلمه عبور" android:layout_below="@+id/username" android:layout_centerHorizontal="true" android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <Button android:theme="@style/MyButton" android:gravity="center" android:id="@+id/btn_login" android:background="@drawable/roundedbutton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="ورود" android:layout_below="@+id/hit2" android:layout_centerHorizontal="true"/>
        <ProgressBar android:theme="@style/CircularProgress" android:id="@+id/progressBar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:layout_below="@+id/btn_login" android:layout_centerHorizontal="true" style="@style/Widget.AppCompat.ProgressBar"/>
        <TextView android:id="@+id/labels" android:layout_width="match_parent" android:layout_height="match_parent" android:text=""/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
